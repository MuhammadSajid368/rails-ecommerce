source "https://rubygems.org"

ruby "3.3.4"

# Rails gem
gem "rails", "~> 7.1.3", ">= 7.1.3.4"

# Asset pipeline
gem "sprockets-rails"

# Stripe integration
gem 'stripe'

# Authentication
gem 'devise'

# Session store
gem 'activerecord-session_store'

# Database
gem "pg", "~> 1.1"

# Password hashing
gem 'bcrypt', '~> 3.1.7'

# Active Storage
gem 'activestorage'

# Image processing
gem 'mini_magick'

# Web server
gem "puma", ">= 5.0"

# JavaScript with ESM import maps
gem "importmap-rails"

# Hotwire
gem "turbo-rails"

# Stimulus framework
gem "stimulus-rails"

gem "pg", "~> 1.1"
# JSON APIs
gem "jbuilder"

# Time zone data for Windows
gem "tzinfo-data", platforms: %i[windows jruby]

# Boot times caching
gem "bootsnap", require: false

# Development and test gems
group :development, :test do
  gem "debug", platforms: %i[mri windows]
end

# Development gems
group :development do
  gem "web-console"
end

# Test gems
group :test do
  gem "capybara"
  gem "selenium-webdriver"
end
