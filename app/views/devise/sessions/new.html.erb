<h1>Log in</h1>

<div class="form-container">
  <div class="form-box">
    <%= form_with(url: user_session_path, local: true, method: :post) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Remember me" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="extra-links">
      <%= link_to "Forgot password?", new_user_password_path %><br>
      <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
