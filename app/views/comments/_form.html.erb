<%= form_with(model: [@product, @product.comments.new]) do |f| %>
  <div class="form-group">
    <%= f.label :content, "Add a Comment:" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Post Comment", class: "btn btn-primary" %>
  </div>
<% end %>